---
import ResponsiveImage from "./ResponsiveImage.astro";
import workHeading from "../assets/work.svg";
const { items } = Astro.props;
---

<style>
  .work-list-section {
    padding: var(--spacing-2);
    max-width: 60rem;
    margin: 0 auto;
  }

  .work-list-heading {
    height: 1.4em;
    margin: var(--spacing-2) 0;
    text-decoration: underline;
  }

  ul,
  li {
    padding: 0;
    margin: 0;
    list-style-type: none;
  }

  a {
    text-decoration: none;
  }

  .work-list-item {
    display: flex;
    margin-bottom: var(--spacing-2);
  }

  .work-item-image {
    width: 12em;
    margin-right: var(--spacing-2);
    box-shadow: 7px 7px 0 var(--blue);
  }

  .work-item-heading {
    margin-top: 0;
  }

  .work-item-copy {
    max-width: 30em;
  }

  @media screen and (min-width: 640px) {
    .work-list-heading {
      height: 2em;
    }
  }
</style>

<section class="work-list-section">
  <img src={workHeading.src} alt="Work" class="work-list-heading" />
  <ul>
    {
      items.map((item) => {
        const { title, description, image, url } = item;
        return (
          <li>
            <a href={url} target="_blank" class="work-list-item">
              <ResponsiveImage
                image={image}
                alt=""
                widths={[384]}
                sizes="384px"
                class="work-item-image"
              />
              <div class="work-item-copy">
                <h3 class="work-item-heading">{title}</h3>
                <p class="work-item-description">{description}</p>
              </div>
            </a>
          </li>
        );
      })
    }
  </ul>
</section>
